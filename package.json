{
  "name": "rpc-load-balancer",
  "version": "0.1.0",
  "description": "Load balancer and gateway for JSON-RPC endpoints",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./sdk": {
      "types": "./dist/sdk/index.d.ts",
      "default": "./dist/sdk/index.js"
    },
    "./gateway": {
      "types": "./dist/gateway/index.d.ts",
      "default": "./dist/gateway/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "gateway": "npm run build && node dist/example/gateway.js",
    "sdk": "npm run build && node dist/example/sdk.js",
    "client": "npm run build && node dist/example/solana-client.js",
    "solana-client": "npm run build && node dist/example/solana-client.js"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@solana/rpc": "^5.4.0"
  }
}
